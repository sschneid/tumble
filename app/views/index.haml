!!! Strict
%html
  %head
    %title tumblefish.
    %script{:type => 'text/javascript', :src => "http://www.google-analytics.com/urgin.js"}
    %script{:type => 'text/javascript'}
      _uacct = "UA-161892-2";
      urchinTracker();
    %link{:rel => "stylesheet", :href => "/css/screen.css", :type => "text/css", :media=> "screen"}
  %body
    #page
    #masthead
      %a{:href => "/"}tumblefish.
    #sidebar
      .item
        .header search it up
        %form{:id => 'search-form', :method => 'get', :action => '/search'}
          %input{ :type=> "text", :id => "search", :name => "search", :value => "", :size => "15"}
      .item
        .header last week's hot shit
      .item
        .header also
        .sm
          .link
            %a{:href=>"/buttons/"}buttons
        .sm
          .link
            %a{:href=>"/index.xml"}feed
    #content
      - @items.each do |i|
        .item
          -case i['type']
          - when 'quote'
            .quote
              =i['quote']
          - when 'link'
            .link
              %a{:href => "irclink/#{i['_id']}" }
                =i['title']
          .author
            =i['author']
    #footer
      - if @prevpage >= 0
        %a{:href => "/#{@prevpage}"}
          %img{:src=>"/img/prev.jpg",:border=>"0"}
      %a{:href => "/#{@nextpage}"}
        %img{:src=>"/img/next.jpg",:border=>"0"}

