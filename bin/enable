#!/bin/bash
WANT="libdbd-mysql-perl libcgi-application-perl"
for pkg in ${WANT}; do
dpkg -l | grep -q "ii ${pkg}"
    if [ $? -eq 1 ];then
        NEED="${NEED} ${pkg}"
    fi
done
if [ ! -z "${NEED}" ];then
    apt-get install -y${NEED}
fi

if [ ! -h /usr/local/bin/perl ]; then
   (cd /usr/local/bin; ln -s /usr/bin/perl)
fi
if [ ! -h /etc/apache2/mods-enabled/rewrite.load ]; then
   (cd /etc/apache2/mods-enabled; ln -s ../mods-available/rewrite.load)
fi
if [ ! -h /srv/www ]; then
   (cd /srv; ln -s /opt/www www)
fi
if [ ! -h /etc/apache2/sites-available/tumble.wcyd.org.conf ]; then
   (cd /etc/apache2/sites-available; ln -s /srv/www/tumble.wcyd.org/conf/tumble.wcyd.org.conf tumble.wcyd.org.conf)
fi
if [ ! -h /etc/apache2/sites-enabled/tumble.wcyd.org.conf ]; then
   (cd /etc/apache2/sites-enabled; ln -s /srv/www/tumble.wcyd.org/conf/tumble.wcyd.org.conf tumble.wcyd.org.conf)
fi
